generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["fullTextIndex", "fullTextSearch"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

/// This model contains row level security and requires additional setup for migrations. Visit https://pris.ly/d/row-level-security for more info.
model standings {
  id           BigInt    @id @default(autoincrement())
  driver       String    @unique @default("")
  fan_votes    Int
  image        String    @default("")
  actual_votes Int       @default(0)
  voteLog      voteLog[]
}

/// This model contains row level security and requires additional setup for migrations. Visit https://pris.ly/d/row-level-security for more info.
model voteLog {
  id           BigInt    @id(map: "vote_log_pkey") @default(autoincrement())
  created_at   DateTime  @default(now()) @db.Timestamptz(6)
  email        String
  driver_vote  String
  is_valid     Boolean   @default(true)
  phone_number String    @default("")
  standings    standings @relation(fields: [driver_vote], references: [driver], onDelete: NoAction, onUpdate: NoAction)
  User         userInfo  @relation(fields: [email], references: [email], onDelete: NoAction, onUpdate: NoAction)
}

/// This model contains row level security and requires additional setup for migrations. Visit https://pris.ly/d/row-level-security for more info.
model userInfo {
  id               BigInt    @id @default(autoincrement())
  created_at       DateTime  @default(now()) @db.Timestamptz(6)
  name             String?   @default("")
  email            String    @unique @default("")
  phone_number     String?   @default("")
  gender           String?   @default("")
  age              String?   @default("")
  profile_complete Boolean   @default(false)
  voteLog          voteLog[]
}
